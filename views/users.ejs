        <li><a href="/"><i class="material-icons menu-icon">home</i></a></li>
        <li><a href="/users"><i class="material-icons menu-icon">explore</i></a></li>

      </ul>
    </div>
  </nav>

  <section class="users">
    <h1 class="text-white font-weight-bold">DETAILS</h1>
    <div class="scrollit">
        
        <table class="container text-center" >
            <thead>
                <tr style="color: white;">
                    <th><h1>Name</h1></th>
                    <th><h1>Address</h1></th>
                    <th><h1>Ph. Number</h1></th>
                    <th><h1>Email</h1></th>
                </tr>
            </thead>

            <tbody>
              <% if(records.length>0){
                records.forEach((row)=>{
                  %>
                <tr>
                    <td><%=row.name%></td>
                    <td><%=row.address%></td>
                    <td><%=row.number%></td>
                    <td><%=row.email%></td>
                </tr>
             <% }) } %>
            </tbody>

        </table>
      </div>

  </section>
